@model Manager

<h2>Create Account</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Firstname">First Name</label>
        <input asp-for="Firstname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Lastname">Last Name</label>
        <input asp-for="Lastname" class="form-control" />
    </div>

    <div>
        <label asp-for="Phone_Number"></label>
        <input asp-for="Phone_Number" />
        <span asp-validation-for="Phone_Number"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div>
        <label asp-for="Assigned_Shelter">Assigned Shelter:</label>
        <input asp-for="Assigned_Shelter" />
        <span asp-validation-for="Assigned_Shelter"></span>
    </div>

    <button asp-action="Index" type="submit" class="btn btn-primary" onclick="Create(Manager)">Create Account</button>
</form>
